<UserControl x:Class="dms.gui.DecisionTreeInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dms.gui"
             mc:Ignorable="d" >
    <StackPanel>
        <Label Content="{Binding Name}" ContentStringFormat="Название дерева: {0}"/>
        <Label Content="{Binding MaxTreeDepth}" ContentStringFormat="Максимальная глубина дерева: {0}"/>
    </StackPanel>
</UserControl>
